body
    margin: 0
    width: 100%
.wrap
    display: flex
    justify-content: center
    align-items: flex-start
    width: 98%
    padding: 2%
    flex: 0 1 95%
.sugar-wrap, .password-wrap
    display: flex
    justify-content: flex-start
    flex-direction: column

.interact, .display
    flex: 0 1 36%
    padding: 1%

.sugar-wrap ul, .password-wrap ul
    display: inline-flex
    justify-content: space-between
    align-items: baseline
    flex-direction: row
    text-decoration: none
    list-style: none
.display ul
    display: flex
    justify-content: flex-start
    flex-direction: column
    align-items: center
    li
        text-align: left
        list-style: none

button
    float: right

@media screen and (max-width: 840px)
    .wrap
        flex-direction: column
    .interact, .display
        flex: 0 1 60%
